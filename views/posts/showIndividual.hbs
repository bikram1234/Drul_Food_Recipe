<section class="about" id="about">
    <div class="column">
        <div class="image">
            <img src="/images/upload/{{posts.image}}" alt="">
            <h5>
                Recipe Owner @{{posts.author.name}}
            </h5>
        </div>
  
   

        <div class="content">
            <h3>
                {{posts.postTitle}}
            </h3>
            <p>
                {{posts.description}}
            </p>

        </div>

    </div>
    <div class="container mt-5">
        <div class="d-flex justify-content-center row ">
        
            <div class="col-md-8 pb-4 ">
                 {{#each posts.comments}}
                <div class="bg-white">
                    
                    
                    <div class="d-flex flex-row user-info">
                        <img src="{{this.author.profilepic}}" alt="" width="50px" height="50px" class="rounded-circle">
                        <div class="d-flex flex-column justify-content-start ml-2" style="margin-left: 40px">
                            <h5 class="d-block font-weight-bold name">@{{this.author.name}}:</h5>
                             <span class="comment-text-xl font-size-2 text-black ml-5" style="font-size: 1.5rem;width:100%" > {{usercomment}}</span>
                        </div>
                    </div>
                    <div class="bg-white">
                        <div class="d-flex flex-row fs-12 mb-5" style="margin-left: 8rem;  ">
                            <div class="like p-2 cursor">
                                
                                <i class="fa fa-pencil-square-o" style="font-size:large"></i>
                                <a href="/{{../posts._id}}/comments/{{_id}}/edit" class="ml-1" style="text-decoration: none;color:black;">Edit</a>
                            </div>
                            <div class="like p-2 cursor">
                                <form id="delete-form" action="/{{../posts._id}}/comments/{{_id}}?_method=DELETE"
                                    method="POST">
                                    <i class="fa fa-trash-o" style="font-size:large;"></i>
                                    <button class="ml-1">Delete</button>
                                </form>
                            </div>
                             
                        </div>
                     
                        </div>
                </div>
                          {{/each}}
          
                          <div class="content">
                            <div class="titlecard">
                                
                                <a href="/{{posts._id}}/comments/newcomment" class="btn" style="text-decoration:none;" type="submit"> Comment</a>
                            </div>
                            </form>
                        </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

</section>


